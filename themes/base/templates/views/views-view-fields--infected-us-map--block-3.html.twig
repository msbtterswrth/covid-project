{% for field in fields -%}
{%  set counter = counter + 1 %}
{% if counter == 1  %}
{% set infocount = field.content|trim %}
  {% if infocount >= 100000 %}
  {% set color = '#21bf19' %}
  {% endif %}
  {% if infocount < 100000 and infocount >= 10000  %}
  {% set color = '#209d37' %}
  {% endif %}
  {% if infocount < 10000 and infocount >= 1000 %}
  {% set color = '#1f6f5f' %}
  {% endif %}
  {% if infocount  < 1000 %}
  {% set color = '#1e4088' %}
  {% endif %}

{% endif %}
  {% if counter == 2 %}
  {{ field.content|replace({ '#990000': color })|raw }}
  {% endif %}
{%- endfor %}
